<!DOCTYPE html>
<html lang="he" dir="rtl" data-theme="light">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - מערכת הרשאות</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.0/font/bootstrap-icons.css">
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-dark bg-primary border-bottom box-shadow mb-3">
            <div class="container-fluid">
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">
                    <i class="bi bi-shield-check"></i> מערכת הרשאות
                </a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        @if (User.Identity?.IsAuthenticated == true)
                        {
                            <li class="nav-item">
                                <a class="nav-link" asp-controller="Home" asp-action="Index">
                                    <i class="bi bi-house"></i> בית
                                </a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" asp-controller="Requests" asp-action="Index">
                                    <i class="bi bi-list-ul"></i> הבקשות שלי
                                </a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" asp-controller="Requests" asp-action="Create">
                                    <i class="bi bi-plus-circle"></i> בקשה חדשה
                                </a>
                            </li>
                            @if (User.IsInRole("Manager") && !User.IsInRole("Admin"))
                            {
                                <li class="nav-item">
                                    <a class="nav-link" asp-controller="Manager" asp-action="Index">
                                        <i class="bi bi-speedometer2"></i> דשבורד מנהל
                                    </a>
                                </li>
                            }
                            @if (User.IsInRole("Admin") || User.IsInRole("Manager"))
                            {
                                <li class="nav-item dropdown">
                                    <a class="nav-link dropdown-toggle" href="#" id="adminDropdown" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                                        <i class="bi bi-gear"></i> ניהול
                                    </a>
                                    <ul class="dropdown-menu" aria-labelledby="adminDropdown">
                                        @if (User.IsInRole("Admin"))
                                        {
                                            <li><a class="dropdown-item" asp-controller="Admin" asp-action="Index">
                                                <i class="bi bi-speedometer2"></i> לוח בקרה</a></li>
                                            <li><a class="dropdown-item" asp-controller="Admin" asp-action="Employees">
                                                <i class="bi bi-people"></i> עובדים</a></li>
                                            <li><a class="dropdown-item" asp-controller="Admin" asp-action="Systems">
                                                <i class="bi bi-laptop"></i> מערכות</a></li>
                                            <li><a class="dropdown-item" asp-controller="Admin" asp-action="Managers">
                                                <i class="bi bi-person-badge"></i> מנהלים</a></li>
                                            <li><a class="dropdown-item" asp-controller="Admin" asp-action="FormTemplates">
                                                <i class="bi bi-file-earmark-text"></i> תבניות</a></li>
                                            <li><a class="dropdown-item" asp-controller="Admin" asp-action="EmailTemplates">
                                                <i class="bi bi-envelope"></i> תבניות אימייל</a></li>
                                        }
                                        @if (User.IsInRole("Manager"))
                                        {
                                            <li><hr class="dropdown-divider"></li>
                                            <li><a class="dropdown-item" asp-controller="Manager" asp-action="Index">
                                                <i class="bi bi-speedometer2"></i> דשבורד מנהל</a></li>
                                        }
                                    </ul>
                                </li>
                            }
                        }
                    </ul>
                    @if (User.Identity?.IsAuthenticated == true)
                    {
                        <form class="d-flex me-3" asp-controller="Search" asp-action="Index" method="get" style="max-width: 300px;">
                            <div class="input-group">
                                <input class="form-control" type="search" name="query" placeholder="חיפוש..." aria-label="חיפוש" value="@Context.Request.Query["query"]">
                                <button class="btn btn-outline-light" type="submit">
                                    <i class="bi bi-search"></i>
                                </button>
                            </div>
                        </form>
                    }
                    <ul class="navbar-nav">
                        <li class="nav-item">
                            <button class="nav-link text-light theme-toggle" id="themeToggle" title="החלף מצב תצוגה">
                                <i class="bi bi-moon-stars-fill" id="themeIcon"></i>
                            </button>
                        </li>
                        @if (User.Identity?.IsAuthenticated == true)
                        {
                            <li class="nav-item">
                                <span class="navbar-text me-3">
                                    <i class="bi bi-person-circle"></i> @(User.FindFirst("FullName")?.Value ?? User.Identity.Name)
                                </span>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" asp-controller="Account" asp-action="LogoutGet">
                                    <i class="bi bi-box-arrow-right"></i> התנתק
                                </a>
                            </li>
                        }
                        else
                        {
                            <li class="nav-item">
                                <a class="nav-link" asp-controller="Account" asp-action="Login">
                                    <i class="bi bi-box-arrow-in-right"></i> התחבר
                                </a>
                            </li>
                        }
                    </ul>
                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted mt-5">
        <div class="container text-center">
            &copy; @DateTime.Now.Year - מערכת הרשאות - כל הזכויות שמורות
        </div>
    </footer>
    <script src="https://code.jquery.com/jquery-3.7.1.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    <script>
        // Apply theme immediately to prevent flash of wrong theme
        (function() {
            const savedTheme = localStorage.getItem('theme') || 'light';
            document.documentElement.setAttribute('data-theme', savedTheme);
        })();
    </script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>

