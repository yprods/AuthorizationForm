@model SetupViewModel
@{
    ViewData["Title"] = "אשף התקנה ראשונית";
    Layout = "_Layout";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card shadow-lg border-0">
                <div class="card-header bg-primary text-white text-center py-4">
                    <h2 class="mb-0">
                        <i class="bi bi-gear-fill"></i> אשף התקנה ראשונית
                    </h2>
                    <p class="mb-0 mt-2">ברוכים הבאים! בואו נתקין את המערכת יחד</p>
                </div>
                <div class="card-body p-5">
                    @if (TempData["SetupSuccess"] != null)
                    {
                        <div class="alert alert-success alert-dismissible fade show" role="alert">
                            <i class="bi bi-check-circle-fill"></i> @TempData["SetupMessage"]
                            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                        </div>
                    }

                    <div class="alert alert-info mb-4">
                        <i class="bi bi-info-circle-fill"></i>
                        <strong>שלב 1 מתוך 1:</strong> יצירת משתמש מנהל ראשון
                        <br>
                        <small>משתמש זה יהיה בעל הרשאות מלאות במערכת</small>
                    </div>

                    <form asp-action="Index" method="post" id="setupForm">
                        <div asp-validation-summary="All" class="text-danger alert alert-danger"></div>
                        
                        <div class="row">
                            <div class="col-md-6 mb-3">
                                <label asp-for="Username" class="form-label">
                                    <strong>@Html.DisplayNameFor(m => m.Username)</strong> <span class="text-danger">*</span>
                                </label>
                                <input asp-for="Username" class="form-control form-control-lg" placeholder="הכנס שם משתמש" required autocomplete="username" />
                                <span asp-validation-for="Username" class="text-danger"></span>
                                <small class="form-text text-muted">שם המשתמש חייב להכיל לפחות 3 תווים</small>
                            </div>

                            <div class="col-md-6 mb-3">
                                <label asp-for="Email" class="form-label">
                                    <strong>@Html.DisplayNameFor(m => m.Email)</strong> <span class="text-danger">*</span>
                                </label>
                                <input asp-for="Email" type="email" class="form-control form-control-lg" placeholder="הכנס כתובת אימייל" required autocomplete="email" />
                                <span asp-validation-for="Email" class="text-danger"></span>
                            </div>
                        </div>

                        <div class="mb-3">
                            <label asp-for="FullName" class="form-label">
                                <strong>@Html.DisplayNameFor(m => m.FullName)</strong>
                            </label>
                            <input asp-for="FullName" class="form-control form-control-lg" placeholder="הכנס שם מלא (אופציונלי)" autocomplete="name" />
                            <span asp-validation-for="FullName" class="text-danger"></span>
                        </div>

                        <div class="row">
                            <div class="col-md-6 mb-3">
                                <label asp-for="Password" class="form-label">
                                    <strong>@Html.DisplayNameFor(m => m.Password)</strong> <span class="text-danger">*</span>
                                </label>
                                <input asp-for="Password" class="form-control form-control-lg" placeholder="הכנס סיסמא" required autocomplete="new-password" />
                                <span asp-validation-for="Password" class="text-danger"></span>
                                <small class="form-text text-muted">
                                    הסיסמה חייבת להכיל לפחות 6 תווים, אות גדולה, אות קטנה וספרה
                                </small>
                            </div>

                            <div class="col-md-6 mb-3">
                                <label asp-for="ConfirmPassword" class="form-label">
                                    <strong>@Html.DisplayNameFor(m => m.ConfirmPassword)</strong> <span class="text-danger">*</span>
                                </label>
                                <input asp-for="ConfirmPassword" class="form-control form-control-lg" placeholder="הכנס סיסמא שוב" required autocomplete="new-password" />
                                <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
                            </div>
                        </div>

                        <div class="alert alert-warning mt-4">
                            <i class="bi bi-exclamation-triangle-fill"></i>
                            <strong>שים לב:</strong> לאחר השלמת ההתקנה, תתחבר אוטומטית למערכת כמנהל.
                        </div>

                        <div class="d-grid gap-2 mt-4">
                            <button type="submit" class="btn btn-primary btn-lg">
                                <i class="bi bi-check-circle"></i> השלם התקנה
                            </button>
                        </div>
                    </form>
                </div>
                <div class="card-footer text-center text-muted bg-light">
                    <small>
                        <i class="bi bi-shield-check"></i> התקנה מאובטחת | מערכת הרשאות
                    </small>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    <script>
        $(document).ready(function() {
            // Client-side validation
            $('#setupForm').on('submit', function(e) {
                var username = $('#Username').val().trim();
                var email = $('#Email').val().trim();
                var password = $('#Password').val();
                var confirmPassword = $('#ConfirmPassword').val();
                
                var isValid = true;
                var errorMessage = '';

                if (!username || username.length < 3) {
                    isValid = false;
                    errorMessage += 'שם המשתמש חייב להכיל לפחות 3 תווים\n';
                }

                if (!email || !isValidEmail(email)) {
                    isValid = false;
                    errorMessage += 'אנא הכנס כתובת אימייל תקינה\n';
                }

                if (!password || password.length < 6) {
                    isValid = false;
                    errorMessage += 'הסיסמה חייבת להכיל לפחות 6 תווים\n';
                }

                if (password !== confirmPassword) {
                    isValid = false;
                    errorMessage += 'הסיסמאות אינן תואמות\n';
                }

                if (!isValid) {
                    e.preventDefault();
                    alert(errorMessage.trim());
                    return false;
                }
            });

            function isValidEmail(email) {
                var re = /^[^\s@@]+@@[^\s@@]+\.[^\s@@]+$/;
                return re.test(email);
            }

            // Real-time password match validation
            $('#ConfirmPassword').on('keyup', function() {
                var password = $('#Password').val();
                var confirmPassword = $(this).val();
                
                if (confirmPassword && password !== confirmPassword) {
                    $(this).addClass('is-invalid');
                } else {
                    $(this).removeClass('is-invalid');
                }
            });

            // Highlight required fields
            $('input[required]').on('blur', function() {
                if ($(this).val().trim() === '') {
                    $(this).addClass('is-invalid');
                } else {
                    $(this).removeClass('is-invalid');
                }
            });
        });
    </script>
}

