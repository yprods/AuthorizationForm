@model IEnumerable<ApplicationUser>
@using System.Linq
@{
    ViewData["Title"] = "ניהול משתמשים";
    var usersWithRoles = ViewBag.UsersWithRoles as List<(ApplicationUser User, IList<string> Roles)> ?? new List<(ApplicationUser User, IList<string> Roles)>();
}

<h2><i class="bi bi-people"></i> ניהול משתמשים</h2>
<hr />

@if (TempData["Success"] != null)
{
    <div class="alert alert-success alert-dismissible fade show" role="alert">
        <i class="bi bi-check-circle"></i> @TempData["Success"]
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
}

@if (TempData["Error"] != null)
{
    <div class="alert alert-danger alert-dismissible fade show" role="alert">
        <i class="bi bi-exclamation-triangle"></i> @TempData["Error"]
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
}

<div class="mb-3">
    <a asp-action="CreateUser" class="btn btn-primary">
        <i class="bi bi-person-plus"></i> יצירת משתמש חדש
    </a>
</div>

<div class="card">
    <div class="card-header bg-primary text-white">
        <h5><i class="bi bi-list"></i> רשימת משתמשים</h5>
    </div>
    <div class="card-body">
        <div class="table-responsive">
            <table class="table table-striped table-hover">
                <thead>
                    <tr>
                        <th>שם משתמש</th>
                        <th>שם מלא</th>
                        <th>אימייל</th>
                        <th>מחלקה</th>
                        <th>תפקידים</th>
                        <th>פעולות</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var user in Model)
                    {
                        var userRoles = usersWithRoles?.FirstOrDefault(u => u.User.Id == user.Id).Roles ?? new List<string>();
                        <tr>
                            <td>@user.UserName</td>
                            <td>@(user.FullName ?? "-")</td>
                            <td>@user.Email</td>
                            <td>@(user.Department ?? "-")</td>
                            <td>
                                @foreach (var role in userRoles)
                                {
                                    <span class="badge bg-@(role == "Admin" ? "danger" : role == "Manager" ? "warning" : "info")">
                                        @role
                                    </span>
                                }
                            </td>
                            <td>
                                <div class="btn-group" role="group">
                                    <a asp-action="EditUser" asp-route-id="@user.Id" class="btn btn-sm btn-warning">
                                        <i class="bi bi-pencil"></i> ערוך
                                    </a>
                                    @if (user.Id != ViewContext.HttpContext.User.FindFirst(System.Security.Claims.ClaimTypes.NameIdentifier)?.Value)
                                    {
                                        <form asp-action="DeleteUser" asp-route-id="@user.Id" method="post" class="d-inline" onsubmit="return confirm('האם אתה בטוח שברצונך למחוק את המשתמש @user.UserName?');">
                                            @Html.AntiForgeryToken()
                                            <button type="submit" class="btn btn-sm btn-danger">
                                                <i class="bi bi-trash"></i> מחק
                                            </button>
                                        </form>
                                    }
                                </div>
                            </td>
                        </tr>
                    }
                    @if (!Model.Any())
                    {
                        <tr>
                            <td colspan="6" class="text-center">אין משתמשים במערכת</td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>

