@model IEnumerable<ApplicationSystem>
@{
    ViewData["Title"] = "ניהול מערכות";
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <h2><i class="bi bi-laptop"></i> ניהול מערכות</h2>
    <a asp-action="CreateSystem" class="btn btn-primary">
        <i class="bi bi-plus-circle"></i> מערכת חדשה
    </a>
</div>

@if (Model.Any())
{
    <div class="table-responsive">
        <table class="table table-striped table-hover">
            <thead class="table-dark">
                <tr>
                    <th>שם</th>
                    <th>תיאור</th>
                    <th>קטגוריה</th>
                    <th>פעיל</th>
                    <th>תאריך יצירה</th>
                    <th>פעולות</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var system in Model)
                {
                    <tr>
                        <td>@system.Name</td>
                        <td>@system.Description</td>
                        <td>
                            @if (!string.IsNullOrEmpty(system.Category))
                            {
                                <span class="badge bg-secondary">@system.Category</span>
                            }
                        </td>
                        <td>
                            @if (system.IsActive)
                            {
                                <span class="badge bg-success">פעיל</span>
                            }
                            else
                            {
                                <span class="badge bg-secondary">לא פעיל</span>
                            }
                        </td>
                        <td>@system.CreatedAt.ToString("dd/MM/yyyy")</td>
                        <td>
                            <a asp-action="EditSystem" asp-route-id="@system.Id" class="btn btn-sm btn-warning">
                                <i class="bi bi-pencil"></i> ערוך
                            </a>
                            @if (system.IsActive)
                            {
                                <form asp-action="DeleteSystem" asp-route-id="@system.Id" method="post" class="d-inline">
                                    <button type="submit" class="btn btn-sm btn-danger" onclick="return confirm('האם אתה בטוח שברצונך למחוק?')">
                                        <i class="bi bi-trash"></i> מחק
                                    </button>
                                </form>
                            }
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
}
else
{
    <div class="alert alert-info">
        <i class="bi bi-info-circle"></i> אין מערכות במערכת
    </div>
}

