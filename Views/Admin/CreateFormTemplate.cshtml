@model FormTemplate
@{
    ViewData["Title"] = "תבנית חדשה";
}

<h2><i class="bi bi-plus-circle"></i> תבנית חדשה</h2>
<hr />

<form asp-action="CreateFormTemplate" method="post">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    
    <div class="row">
        <div class="col-md-12">
            <div class="form-group mb-3">
                <label asp-for="Name" class="form-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
        </div>
    </div>

    <div class="row">
        <div class="col-md-12">
            <div class="form-group mb-3">
                <label asp-for="Description" class="form-label"></label>
                <textarea asp-for="Description" class="form-control" rows="2"></textarea>
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
        </div>
    </div>

    <div class="row">
        <div class="col-md-12">
            <div class="form-group mb-3">
                <label asp-for="TemplateContent" class="form-label"></label>
                <textarea asp-for="TemplateContent" class="form-control" rows="10"></textarea>
                <small class="form-text text-muted">הכנס תוכן התבנית (JSON או HTML). ניתן להשתמש בפלס הולדרים כמו {FirstName}, {LastName} וכו'</small>
                <span asp-validation-for="TemplateContent" class="text-danger"></span>
            </div>
        </div>
    </div>

    <div class="form-group">
        <button type="submit" class="btn btn-primary">
            <i class="bi bi-check-circle"></i> שמור
        </button>
        <a asp-action="FormTemplates" class="btn btn-secondary">
            <i class="bi bi-x-circle"></i> ביטול
        </a>
    </div>
</form>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}

